<!-- ##### Welcome Area Start ##### -->
    <div class="breadcumb-area clearfix">
        
        <!-- breadcumb content -->
        <div class="breadcumb-content">
            <div class="container h-100">
                <div class="row h-100 align-items-center">
                    <div class="col-12">
                        <nav aria-label="breadcrumb" class="breadcumb--con text-center">
                            <h2 class="title wow fadeInUp" data-wow-delay="0.2s"><%= pagetitle %></h2>
                            <ol class="breadcrumb justify-content-center wow fadeInUp" data-wow-delay="0.4s">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item active" aria-current="page"><%= pagetitle %></li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Welcome Area End ##### -->
	<!-- ##### Blog Area Start ##### -->
    <section class="blog-area section-padding-100">
        <div class="container">

            <div class="row">
                <div class="col-12 col-md-9">
					<div class="timelineBox">
                        <div class="timelineHeader">
                            <h3><%= pagetitle %></h3>
                            <!--<span>Business History</span>-->
                        </div>
                        <div class="timelineBody">
                            <ul class="timeline">
							<% activity.forEach(function(onecat) { %>
								<!-- Single Timeline -->
                                <li>
                                    <div class="timelineDot"></div>
                                    <div class="timelineDate">
                                        <p><i class="fa fa-calendar mr-5p"></i><%= onecat.date %></p>
                                        <p><i class="fa fa-clock-o mr-5p"></i><%= onecat.time %></p>
                                    </div>
                                    <div class="timelineWork">
                                        <h6><%= onecat.title %></h6>
                                        <span><%= onecat.description %></span>
                                    </div>
                                </li>
							<% }); %>
							 </ul>
                        </div>
                    </div>
                </div>
				
				<div class="col-12 col-md-3">
                    <div class="sidebar-area">

                        <!-- Search Widget -->
                        <div class="search-widget-area mb-50 wow fadeInUp" data-wow-delay="0.2s">
                            <form action="#" method="post">
                                <input type="search" name="search" id="search" placeholder="Search...">
                                <button type="submit" class="btn"><i class="fa fa-search"></i></button>
                            </form>
                        </div>

                        <!-- Don't Miss Widget -->
                        <div class="donnot-miss-widget mb-50">
                            <div class="widget-title wow fadeInUp" data-wow-delay="0.3s">
                                <h5>Filters</h5>
                            </div>
                            <div class="filers-list">
							<% tags.forEach(function(onecat) { %>
								<a href="" class="filter-item">
                                    <img src="/<%= onecat.img %>" alt=""><%= onecat.tag %>
                                </a>
							<% }); %>
							</div>
                        </div>

                        <!-- Subscribe Widget -->
                        <div class="subscribe-widget mb-0">
                            <div class="widget-title wow fadeInUp" data-wow-delay="0.9s">
                                <h5>subscribe</h5>
                            </div>
                            <div class="subscribe-form wow fadeInUp" data-wow-delay="1s">
                                <form action="#">
                                    <input type="email" name="email" id="subs_email" placeholder="Your Email">
                                    <button type="submit" class="btn mb-0">subscribe</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ##### Blog Area End ##### -->